{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": [
    "@nedcloarbr/biome-config/nestjs",
    "@nedcloarbr/biome-config/ignore"
  ],
  "linter": {
    "rules": {
      "complexity": {
        "useLiteralKeys": "off"
      },
      "style": {
        "noUnusedTemplateLiteral": "off",
        "useImportType": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  }
}
